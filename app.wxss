@import 'styles/weui.wxss';
@import '/towxml/style/main.wxss';

page {
  background: #f8f8f8;
  font-family: "STHeitiTC-Light", "Microsoft YaHei Light", "Hiragino Sans GB", -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
  padding-bottom: 48px;
}

.bottom {
  height: 120px;
}

.toolbar {
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 48px;
  display: flex;
  align-items: center;
}

.toolbar__input {
  font-size: 14px;
  width: 100%;
  margin: 16px;
}

.toolbar__overlay {
  width: 100%;
  background: rgba(255, 255, 255, 0.85);
  z-index: 999;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.6);
  position: absolute;
  bottom: 0;
  top: 0;
  margin: auto;
  display: flex;
  align-items: center;
}

.toolbar__overlay_text {
  text-align: right;
  flex-grow: 2;
  margin: 0 8px;
}

.toolbar__overlay_button {
  margin: 0 8px;
  line-height: 1;
}

.comments {
  font-family: Lato,'Helvetica Neue',Arial,Helvetica,sans-serif;
  font-size: 13px;
  padding-top: 24px;
  border-top: 1px solid #ededed;
}

.comments__meta {
  text-align: right;
  color: #999;
  font-size: 13px;
}

.comment {
  display: flex;
}

.comment__content {
  width: 100%;
  border-bottom: 1px solid #ededed;
  margin-bottom: 16px;
  line-height: 1;
}

.comment__content_author {
  font-weight: bold;
  margin-right: 8px;
}

.comment__content_date {
  font-size: 12px;
  color: #999;
}

.comment__content_body {
  margin-top: 8px;
  line-height: 1.5;
}

.comment__content_quote {
  font-size: 12px;
  font-style: italic;
  color: #999;
  margin-top: 4px;
  margin-bottom: 4px;
  padding-left: 4px;
  border-left: 2px solid #e0e0e0;
}

.comment__avatar {
  margin-right: 8px;
}

.comment__avatar_img {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  margin: 0
}

.spinner {
  margin: 32px auto;
  width: 70px;
  text-align: center;
}

.spinner view {
  width: 18px;
  height: 18px;
  background-color: #333;

  border-radius: 100%;
  display: inline-block;
  -webkit-animation: sk-bouncedelay 1.4s infinite ease-in-out both;
  animation: sk-bouncedelay 1.4s infinite ease-in-out both;
}

.spinner .bounce1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.spinner .bounce2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0) }
  40% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bouncedelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  } 40% {
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
  }
}

.footer__img {
  height: 120px;
  overflow: hidden;
  display: flex;
  align-items: flex-end;
}

.footer__img image {
  width: 100%;
}

.featured-media image {
  width: 100%;
  height: 220px;
}

.article__meta {
  display: flex;
  justify-content: space-between;
  color: #999;
  margin-bottom: 0.8em;
}

.article__avatar {
  width: 24px;
  height: 24px;
  border-radius: 50%;
  margin: 0;
}

.profile {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
}

.profile__content {
  text-align: center;
  color: rgba(0, 0, 0, 0.6);
}

.profile__avatar {
  background: #e7e7e7;
  width: 96px;
  height: 96px;
  margin-top: 40px;
  border-radius: 50%;
}

.profile__action {
  margin-bottom: 16px;
}
