<view class="profile">
  <view class="profile__content">
    <image class="profile__avatar" src="{{ user_avatar }}" />
    <view class="profile__item">
      <view class="badge">管理员</view>
    </view>
    <view class="profile__item">{{ user_nicename || '未登录'}}</view>
    <view class="profile__item">{{ user_email }}</view>
  </view>
  <view class="profile__action">
    <view class="btn-area">
      <button class="btn" type="primary">退出</button>
    </view>
    <view class="btn-area">
      <button class="btn" type="primary">登录</button>
    </view>
  </view>
</view>
